<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/couponCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/placeholder_text"
            android:textColor="@color/secondary_mid"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/couponDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/couponCode"
            android:text="@string/foodTitle"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/couponStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/couponDesc"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:drawablePadding="2dp"
            android:text="@string/placeholder_text" />

        <TextView
            android:id="@+id/couponDisc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/couponStatus"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/placeholder_text"
            android:textColor="@color/secondary_mid"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_below="@id/couponDisc"
            android:id="@+id/buttonMenu"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <Button
                android:id="@+id/editCouponBtn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="12sp"
                android:text="@string/edit"
                android:layout_marginHorizontal="5dp"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>