<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".admin.Boundary.AdminPage">

    <LinearLayout
        android:id="@+id/adminTopMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp">

        <Button
            android:id="@+id/createAcc"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:text="@string/create_acc_text"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/adminLogOut"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="@string/logout_text"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/adminSecondMenu"
        android:layout_below="@+id/adminTopMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <EditText
            android:id="@+id/search_text"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="@string/search"
            android:textColor="@color/white" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRVAdmin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/adminSecondMenu" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/homeFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/secondary_mid"
        android:contentDescription="@string/to_go_owner_homepage"
        android:src="@drawable/ic_round_home_24"
        />


</RelativeLayout>