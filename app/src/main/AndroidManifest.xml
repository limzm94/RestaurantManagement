<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.restaurantmanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RestaurantManagement">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity"
            />
        <activity android:name=".admin.AdminUI"
            android:label="Admin Function"/>
        <activity android:name=".admin.CreateAccount"
            android:label="Create Account"/>
        <activity android:name=".admin.EditAccount"
            android:label="Edit Account"/>
        <activity android:name=".owner.OwnerUI"
            android:label="Owner Homepage"/>
        <activity android:name=".customer.CustomerUI"
            android:label="Food Menu" />
        <activity android:name=".customer.CheckoutActivity"
            android:label="Cart Checkout"/>
    </application>

</manifest>